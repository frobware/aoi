#!/bin/bash -e

DIR="$(dirname $0)"
cd $DIR

function fetch_image {
    RELEASE=$1
    mkdir -p $RELEASE
    pushd $RELEASE
    wget https://cloud-images.ubuntu.com/$RELEASE/current/SHA256SUMS
    wget https://cloud-images.ubuntu.com/$RELEASE/current/SHA256SUMS.gpg
    wget https://cloud-images.ubuntu.com/$RELEASE/current/$RELEASE-server-cloudimg-amd64-disk1.img
    popd
}

fetch_image trusty
fetch_image xenial
